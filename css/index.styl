  .preview
    padding 10px
    background #fff
    img
      width 130px
      float center


#wrapper
  absolute top left


#sidebar
  relative left 40px top 40px
  width 240px
  //margin-left 40px
  //margin-top 40px
  
  button
    width 100%
    height 32px
    font-weight 400
    //border-radius top 3px
  input[type=search]
    width 100%
    height 32px
    margin-bottom 20px
  #meters
    text-align right
    margin-top 5px
    font-weight 400
  #categories
    margin-top 20px
    margin-bottom 20px
  #slider
    margin-bottom 20px

.fadeout
  z-index 50
  position fixed
  left 0
  right 0
  height 40px

.bottom
  bottom 0
  vbg-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 255))

.top
  top 0
  vbg-gradient(rgba(255, 255, 255, 255), rgba(255, 255, 255, 0))


