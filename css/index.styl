@import './mixin'
@import './jqueryui'
@import '../node_modules/nib/lib/nib'

@import './Karla:400:700'
@import './IndieFlower:400'

html body
  margin 0
  padding 0
  width 100%
  height 100%

body
  font-size 14px
  line-height 21px
  color #333
  background #f6f6f6
  background-image url('data:image/pngbase64,iVBORw0KGgoAAAANSUhEUgAAADIAAAADCAIAAABee8vuAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAB1JREFUeNpi/P79O8PgAyzMzMyD0FlMDIMSAAQYAC22AvZUamhbAAAAAElFTkSuQmCC')
  font-family "Karla", sans-serif
  font-weight 400
  //font-family "Helvetica Neue", "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, sans-serif !important

#map
  width 240px
  height 240px
//#map:-webkit-full-screen { width: 100% !important height: 100% !important }
//#map:-moz-full-screen { width: 100% !important height: 100% !important }
//#map:full-screen { width: 100% !important height: 100% !important }

#contentwrapper
  position absolute
  top 40px
  left 280px
  bottom 0px
  right 0px

#maincontent
  position relative
  //relative left 320px
  //float left
  //column-count 4
  //column-fill auto
  
  margin-bottom 40px
  
  //right 40px

  .preview
    padding 10px
    background #fff
    position relative
    display none
    
    //margin-bottom 20px
    //column-span none
    //column-rule none
    //break-inside avoid
    transition box-shadow 0.15s ease-out
    border-radius 2px
    border 1px solid #DEDEDE
    img
      width 200px
      display block
      cursor pointer
      //float center
    .distance
      text-align right
      font-size 12px
      line-height 16px
    .description
      padding 0px 5px 0px 5px
      font-family 'Indie Flower', cursive
      font-size 18px
      line-height 21px
      width: 190px
    //.back
    //  display none

#wrapper
  absolute top 40px bottom 40px
  left 40px
  right 40px



#sidebar
  position fixed
  //relative left 40px
  width 240px
  //float left
  //margin-left 40px
  //margin-top 40px
  
  button
    width 100%
    height 32px
    font-weight 700
    //border-radius top 3px
  input[type=search]
    width 100%
    height 32px
    margin-bottom 20px
  #meters
    text-align right
    margin-top 5px
    font-weight 400
  #categories
    margin-top 20px
    margin-bottom 20px
  #slider
    margin-bottom 20px

.fadeout
  z-index 50
  position fixed
  left 0
  right 0
  height 40px

.bottom
  bottom 0
  vbg-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 255))

.top
  top 0
  vbg-gradient(rgba(255, 255, 255, 255), rgba(255, 255, 255, 0))


