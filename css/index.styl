@import './mixin'
@import './jqueryui'

html body
  margin: 0;
  padding: 0;
  width: 100%
  height: 100%

body
  font-size: 14px;
  line-height: 21px;
  color: #333;
  background: #f6f6f6;
  background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAADIAAAADCAIAAABee8vuAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAB1JREFUeNpi/P79O8PgAyzMzMyD0FlMDIMSAAQYAC22AvZUamhbAAAAAElFTkSuQmCC');
  font-family: "Helvetica Neue", "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, sans-serif !important;

  #map
    width: 240px
    height: 240px
  #map:-webkit-full-screen { width: 100% !important; height: 100% !important; }
  #map:-moz-full-screen { width: 100% !important; height: 100% !important; }
  #map:full-screen { width: 100% !important; height: 100% !important; }

  #maincontent
    position: absolute
    // TODO: Fix with mixin
    -webkit-column-count: 4;
    -moz-column-count: 4;
    -ms-column-count: 4;
    -o-column-count: 4;
    column-count: 4;
    width: 640px;
    margin-left: 20px;
    left: 280px
    top: 40px

    .preview
      padding: 10px
      background: #fff;
      img
        width: 130px
        float: center


  //#wrapper

  #sidebar
    position: fixed
    margin-left: 40px
    margin-top: 40px
    

    #meters
      text-align: right
      margin-top: 5px
    #categories
      margin-top: 20px
      margin-bottom: 20px
    #slider
      margin-bottom: 20px

  .fadeout
    z-index: 50;
    position: fixed;
    left: 0;
    right: 0;
    height: 40px;

  .bottom
    bottom: 0;
    vbg-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 255))

  .top
    top: 0;
    vbg-gradient(rgba(255, 255, 255, 255), rgba(255, 255, 255, 0))

.leaflet-control-zoom-fullscreen
  background-image: url("icon-fullscreen.png");

.leaflet-control-zoom-fullscreen.last
  margin-top: 5px


