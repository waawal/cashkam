<% dist = @distance ? 0.0 %>

  <img src="<%= @media %>">
  <div class="details">
      <a class="btn btn-small" href="#"><i class="icon-star-empty"></i></a>
      <a class="btn btn-small" href="#"><i class="icon-user"></i></a>
      <i class="icon-map-marker"></i>
      <span class="distance">
        approx. <%= dist.toFixed(0) %> km
      </span>
  </div>

  <p class="description">
    <%= @text %>
  </p>
  <span class="label">More</span>